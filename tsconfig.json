{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6",
      "es7",
      "esnext.asynciterable",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": [
      "node",
      "graphql",
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
